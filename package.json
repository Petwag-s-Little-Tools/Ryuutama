{
  "name": "ryuutama",
  "version": "0.0.3",
  "description": "FoundryVTT system for Ryuutama TTRPG",
  "scripts": {
    "watch:css": "sass --watch styles/ryuutama.scss ryuutama.css",
    "watch:js": "node scripts/watch.mjs",
    "build:js": "node scripts/build.mjs",
    "build:css": "sass styles/ryuutama.scss ryuutama.css",
    "build": "npm run build:js && npm run build:css",
    "zip": "node scripts/zip.mjs",
    "release": "npm run build && npm run zip"
  },
  "author": "Petwag <https://github.com/Petwag>",
  "license": "ISC",
  "devDependencies": {
    "@foundryvtt/foundryvtt-cli": "1.0.2",
    "adm-zip": "0.5.10",
    "esbuild": "0.20.0",
    "sass": "1.67.0"
  }
}
